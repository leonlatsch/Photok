<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.viewphoto.ViewPhotoActivity">

    <data>

        <variable
            name="viewModel"
            type="dev.leonlatsch.photok.ui.viewphoto.ViewPhotoViewModel" />

        <variable
            name="context"
            type="dev.leonlatsch.photok.ui.viewphoto.ViewPhotoActivity" />
    </data>

    <RelativeLayout
        android:id="@+id/viewPhotoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@android:color/black">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/viewPhotoAppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@drawable/bg_dark_toolbar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/viewPhotoToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundTint="@android:color/white"
                android:theme="@style/toolbarStyle">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/medium_gap"
                    android:onClick="@{() -> context.onDetails()}"
                    android:singleLine="true"
                    android:text="@{viewModel.currentPhoto.fileName, default=fileName}"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPhotoViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/viewPhotoBottomToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_dark_toolbar"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@{() -> context.onDelete()}"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/common_delete"
                    android:src="@drawable/ic_delete"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/common_delete"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@{() -> context.onExport()}"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/common_export"
                    android:src="@drawable/ic_export"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/common_export"
                    android:textColor="@android:color/white" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</layout>