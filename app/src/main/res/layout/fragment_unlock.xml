<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.unlock.UnlockFragment">

    <data>

        <variable
            name="viewModel"
            type="dev.leonlatsch.photok.ui.unlock.UnlockViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/AppNameTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:textAlignment="center" />

            <TextView
                style="@style/VeryBigTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:width="280dp"
                android:text="@string/unlock_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="30dp"
                android:paddingEnd="20dp">

                <dev.leonlatsch.photok.ui.components.PasswordEditText
                    android:id="@+id/unlockPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:password_edit_text_hint="@string/unlock_enter_password"
                    app:textValue="@={viewModel.passwordText}" />

                <TextView
                    android:id="@+id/unlockWrongPasswordWarningTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:text="@string/unlock_wrong_password"
                    android:textColor="@color/darkRed"
                    android:visibility="invisible" />

            </LinearLayout>

            <Button
                android:layout_width="@dimen/wide_button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_horizontal"
                android:onClick="@{() -> viewModel.unlock()}"
                android:text="@string/unlock_button" />

        </LinearLayout>

        <include
            android:id="@+id/loadingOverlay"
            layout="@layout/loading_overlay" />

    </FrameLayout>

</layout>